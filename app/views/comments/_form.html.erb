<%= form_with model: [ post, comment || post.comments.build ] do |form| %>
    <p>
      <%= form.text_area :body %>
      <% comment.errors.full_messages_for(:body).each do |message| %>
        <div class="error-message"><%= message %></div>
      <% end %>
    </p>
    <p>
      <%= form.submit "Add Comment" %>
    </p>
  <% end %>
