<h1>Welcome <%= @current_user.username%>, Your Current Awesome Posts!</h1>

<ul>
  <% sorted_posts = @posts.order(created_at: :desc) %>
  <% sorted_posts.each do |post| %>
      <h2> <%= post.title%>: by, <% user = User.find(post.user_id)%> <%= user.username%> </h2>
      <div> <%= post.body%> </div>
      # Comments: <%= link_to post.comments.size, post_path(post)%>
     , Last updated at 
     <%=post.updated_at%>
  <% end %>
</ul>


<%= link_to "New Post", new_post_path %>


<button onclick="window.location.href='/logout'">Logout</button>